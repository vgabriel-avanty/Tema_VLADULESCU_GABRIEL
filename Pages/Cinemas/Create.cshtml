@page
@model Tema_VLADULESCU_GABRIEL.Pages.Cinemas.CreateModel

@{
    ViewData["Title"] = "Adaugă Cinema";
}

<a asp-page="Index" class="btn btn-primary">Înapoi</a>
<h1 class="d-flex justify-content-center mt-5">Adaugă Cinema</h1>

<div class="row">
    <div class="col-md-4 m-auto">
        <form method="post" class="shadow p-5">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cinema.Name" class="control-label"></label>
                <input asp-for="Cinema.Name" class="form-control" />
                <span asp-validation-for="Cinema.Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Adaugă" class="btn btn-primary w-100" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
